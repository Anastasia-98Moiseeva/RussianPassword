<?xml version="1.0" encoding="utf-8"?>
<clip
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipOrientation="horizontal">

    <level-list>
        <item
            android:minLevel="0"
            android:maxLevel="2999">
            <shape>
                <solid android:color="@color/badPassword" />
            </shape>
        </item>

        <item
            android:minLevel="3000"
            android:maxLevel="4999">
            <shape>
                <solid android:color="@color/normalPassword" />
            </shape>
        </item>

        <item
            android:minLevel="5000"
            android:maxLevel="6000">
            <shape>
                <solid android:color="@color/goodPassword" />
            </shape>
        </item>
    </level-list>
</clip>